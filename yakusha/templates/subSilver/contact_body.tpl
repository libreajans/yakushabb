<table width="100%" cellspacing="2" cellpadding="2" border="0" align="center">
<tr>
<td align="left" class="nav"><a href="{U_INDEX}" class="nav">{L_INDEX}</a> &raquo; {L_HEADER}</td>
</tr>
</table>
<table width="100%" cellpadding="4" cellspacing="1" border="0" align="center" class="forumline">
<form action="{U_CONTACT_ACTION}" method="post">
<tr>
<th class="thHead" colspan="2">{L_HEADER}</th>
</tr>
<tr>
<td colspan="2" class="row1" align="middle"><span class="gen">{L_ABOUT}</span></td>
</tr>
<tr>
<th class="thHead" colspan="2">{L_EMAIL_SETTINGS}</th>
</tr>
<tr>
<td class="row2" colspan="2"><span class="gensmall">{L_ITEMS_IMPORTANT}</span></td>
</tr>
<tr>
<td width="50%" class="row1"><span class="gen">{L_NAME}</span><br /><span class="gensmall">{L_NAME_EXPLAIN}</span></td>
<td class="row2"><input class="post" type="text" size="40" name="name" value="{L_POSTED_NAME}" /></td>
</tr>
<tr>
<td class="row1"><span class="gen">{L_EMAIL}</span><br /><span class="gensmall">{L_EMAIL_EXPLAIN}</span></td>
<td class="row2"><input class="post" type="text" size="40" name="email" value="{L_POSTED_EMAIL}" /></td>
</tr>
<tr>
<td class="row1"><span class="gen">{L_URGENCY}</span><br /><span class="gensmall">{L_URGENCY_EXPLAIN}</span></td>
<td class="row2">{URGENCY}</td>
</tr>
<tr>
<th class="thHead" colspan="2">{L_EMAIL_CONTENT}</th>
</tr>
<tr>
<td class="row2" colspan="2"><span class="gensmall">{L_ITEMS_VIEWED}</span></td>
</tr>
<tr>
<td class="row1"><span class="gen">{L_SUBJECT}</span></td>
<td class="row2">{SUBJECT}</td>
</tr>
<tr>
<td class="row1"><span class="gen">{L_MESSAGE}</span><br /><span class="gensmall">{L_MESSAGE_EXPLAIN}</span></td>
<td class="row2"><textarea name="message" rows="10" cols="40">{L_POSTED_MESSAGE}</textarea></td></td>
</tr>
<tr>
<td class="catBottom" colspan="2" align="center"><input type="submit" name="submit" value="{L_SUBMIT}" class="mainoption" />&nbsp;&nbsp;<input type="reset" value="{L_RESET}" class="liteoption" />
</td>
</tr>
<tr>
<td colspan="2" class="row1" align="middle"><span class="gensmall">{L_CONTACT}</span></td>
</tr>
</table>
</form>